{
  "name": "linkclump",
  "version": "1.2.3",
  "description": "Lets you open, copy or bookmark multiple links at the same time.",
  "type": "module",
  "scripts": {
    "build": "rsbuild build --mode=development",
    "build:prod": "rsbuild build --mode=production",
    "build:watch": "rsbuild build --watch",
    "lint": "prettier --write \"src/**/*.{ts,tsx,css}\" \"__tests__/**/*.{ts,tsx}\" \"public/**/*.{json,css,html}\"",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carry0987/Linkclump.git"
  },
  "keywords": [
    "chrome-extension",
    "typescript",
    "preact",
    "tailwindcss",
    "vitest",
    "rsbuild"
  ],
  "author": "carry0987",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carry0987/Linkclump/issues"
  },
  "homepage": "https://github.com/carry0987/Linkclump#readme",
  "dependencies": {
    "@uiw/react-color": "^2.9.2",
    "preact": "^10.28.0",
    "tailgrids": "^2.3.0"
  },
  "devDependencies": {
    "@carry0987/utils": "^3.9.3",
    "@rsbuild/core": "^1.6.12",
    "@rsbuild/plugin-preact": "^1.6.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/preact": "^3.2.4",
    "@types/chrome": "^0.1.32",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "4.0.15",
    "jsdom": "^27.2.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.17",
    "vitest": "^4.0.15"
  }
}
